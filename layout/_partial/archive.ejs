<% if (isTag || is_tag()){ %>
    <v-row justify="center">
        <v-col cols="10" xs="11" xl="5">
            <v-card>
                <v-card-title>
                    标签云
                </v-card-title>
                <v-card-text>
                    <% site.tags.forEach((tag) => { %>
                        <v-chip href="<%= url_for(tag.path) %>" <% if (!is_tag(tag.name)){ %>outlined
                                <% } %>
                        ><%= tag.name %></v-chip>
                    <% }); %>
                </v-card-text>
            </v-card>
        </v-col>
    </v-row>
<% } %>
<% if (isCategory || is_category()){ %>
    <v-row justify="center">
        <v-col cols="10" xs="11" xl="5">
            <v-card>
                <v-card-title>
                    分类
                </v-card-title>
                <v-card-text>
                    <% site.categories.forEach((category) => { %>
                        <v-chip href="<%= url_for(category.path) %>" <% if (!is_category(category.name)){ %>outlined
                                <% } %>
                        ><%= category.name %></v-chip>
                    <% }); %>
                </v-card-text>
            </v-card>
        </v-col>
    </v-row>
<% } %>

