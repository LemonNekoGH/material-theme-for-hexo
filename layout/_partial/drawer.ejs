<div class="mdui-drawer mdui-shadow-24" id="drawer" style="background: white">
    <ul class="mdui-list" style="padding-top: 0">
        <li class="mdui-list-item mdui-ripple">
            <% if (theme.avatar){ %>
                <div class="mdui-list-item-avatar">
                    <img src="<%= url_for(theme.avatar) %>"/>
                </div>
            <% } else { %>
                <i class="mdui-icon material-icons mdui-list-item-avatar">account-circle</i>
            <% } %>
            <div class="mdui-list-item-content">
                <div class="mdui-list-item-title"><%= config.author %></div>
                <div class="mdui-list-item-text"><%= config.description %></div>
            </div>
        </li>
        <li class="mdui-divider"></li>
        <li class="mdui-list-item mdui-ripple <% if (is_home()){ %>mdui-list-item-active<% } %>">
            <i class="mdui-icon material-icons mdui-list-item-icon">home</i>
            <div class="mdui-list-item-content">
                <div class="mdui-list-item-title">首页</div>
            </div>
        </li>
        <% if (theme.category){ %>
            <li class="mdui-list-item mdui-ripple">
                <i class="mdui-icon material-icons mdui-list-item-icon<% if (is_category()){ %>mdui-list-item-active<% } %>">dashboard</i>
                <div class="mdui-list-item-content">
                    <div class="mdui-list-item-title">分类</div>
                </div>
            </li>
        <% } %>
        <% if (theme.tag){ %>
            <li class="mdui-list-item mdui-ripple">
                <i class="mdui-icon material-icons mdui-list-item-icon<% if (is_tag()){ %>mdui-list-item-active<% } %>">bookmark</i>
                <div class="mdui-list-item-content">
                    <div class="mdui-list-item-title">标签</div>
                </div>
            </li>
        <% } %>
        <% if (theme.archive){ %>
            <li class="mdui-list-item mdui-ripple">
                <i class="mdui-icon material-icons mdui-list-item-icon<% if (is_archive()){ %>mdui-list-item-active<% } %>">archive</i>
                <div class="mdui-list-item-content">
                    <div class="mdui-list-item-title">归档</div>
                </div>
            </li>
        <% } %>
    </ul>
</div>