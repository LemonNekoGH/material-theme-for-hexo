<v-app-bar app color="<% if (theme.appBarColor){ %><%= theme.appBarColor %><% }else{ %>primary<% } %>"
           <% if (!theme.useLightAppBar){ %>dark
        <% } %>
           <% if (theme.appBarBackground){ %>src="<%= url_for(theme.appBarBackground) %>"
        <% } %>
           <% if (theme.useLargerHeightOfAppBar){ %>prominent shrink-on-scroll
        <% } %>
           <% if (theme.fadeOutToPureColor){ %>fade-img-on-scroll
        <% } %>
>
    <v-app-bar-nav-icon>
        <v-btn icon @click="toggleDrawer">
            <v-icon>mdi-menu</v-icon>
        </v-btn>
    </v-app-bar-nav-icon>
    <v-toolbar-title><a href="<%= url_for("/") %>"
                        style="text-decoration: none;<% if (!theme.useLightAppBar){ %>color: white<% }else{ %>color: black<% } %>"><%= config.title %>
            <% if (is_current("categories")){ %>
                | 分类
            <% } else if (is_current("tags")){ %>
                | 标签
            <% } else if (is_archive()) { %>
                | 归档
            <% } else if (is_post()){ %>
                | 文章详情
            <% } %>
        </a>
    </v-toolbar-title>
</v-app-bar>